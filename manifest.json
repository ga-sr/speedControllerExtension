{
  "manifest_version": 3,
  "name": "Video Speed Controller",
  "version": "1.0",
  "description": "Control the video speed",
  "browser_specific_settings": {
    "gecko": {
      "id": "videospeedcontroller@gasrlab.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ],
        "optional": [],
        "description": "This extension does not collect, store, or transmit any user data. It only modifies video playback speed locally in the browser."
      }
    }
  },
  "permissions": [],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}